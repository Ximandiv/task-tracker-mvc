@model UserTaskListViewModel?
@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Dashboard";
}

<header>

    <h1 class="text-xl-center">Welcome to your task list</h1>

</header>

<hr>

<main>

    <div class="container">

        <div class="justify-content-center text-center">
            <a asp-action="Create" class="btn btn-success">Create Task</a>
        </div>

        <partial name="Partial/_TaskFilters" />

        @if (ViewData["SuccessOperation"] != null)
        {
            <div class="justify-content-center text-center mt-4">
                <span class="text-success">@ViewData["SuccessOperation"]</span>
            </div>
        }

        @if (ViewData["DeleteError"] != null)
        {
            <div class="justify-content-center text-center mt-4">
                <span class="text-danger" id="Error-Validation">@ViewData["DeleteError"]</span>
            </div>
        }

        <partial name="Partial/_DashboardPagination" model="Model" />

        <div class="row g-4" id="tasks-container">

            @if(Model != null)
            {
               @foreach(var task in Model.Tasks)
               {
                    <partial name="Partial/_DashboardItems" model="task" />
               }
            }

        </div>

    </div>

</main>