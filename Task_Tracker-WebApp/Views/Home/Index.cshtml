@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Task Tracker or TTR!</h1>
    <p>Here, you can create your personal tasks and track them in real time!</p>

    @if(ViewData["AuthError"] != null)
    {
        <div class="justify-content-center text-center mt-4">
            <span class="text-danger">@ViewData["AuthError"]</span>
        </div>
    }
</div>
