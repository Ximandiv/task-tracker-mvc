@model SignInViewModel
@{
    ViewData["Title"] = "Sign Up";
}
<div class="signin-container">
    <div class="form-container">
        <h2>Sign Up</h2>
        <form asp-action="SignIn" method="post">
            @Html.AntiForgeryToken()
            <label asp-for="Username"></label>
            <input type="text" placeholder="Username" asp-for="Username" required />
            <span asp-validation-for="Username"></span>

            <label asp-for="Email"></label>
            <input type="email" placeholder="Email" asp-for="Email" required />
            <span asp-validation-for="Email"></span>

            <label asp-for="Password"></label>
            <input type="password" placeholder="Password" asp-for="Password" required />
            <span asp-validation-for="Password"></span>

            <button type="submit">Sign Up</button>
        </form>
        <p>Already have an account? <a asp-area="" asp-controller="Auth" asp-action="Login">Login</a></p>
    </div>
</div>
