@{
    ViewData["Title"] = "Log-In";
}
<div class="login-container">
    <div class="form-container">
        <h2>Login</h2>
        @if (ViewData["SignInMessage"] != null)
        {
            <span>@ViewData["SignInMessage"]</span>
        }
        <form asp-action="LoginUser" asp-controller="Auth" method="post">
            <input type="email" placeholder="Email" required />
            <input type="password" placeholder="Password" required />
            <button type="submit">Login</button>
        </form>
        <p>Don't have an account? <a asp-area="" asp-controller="Auth" asp-action="SignIn">Sign up</a></p>
    </div>
</div>
